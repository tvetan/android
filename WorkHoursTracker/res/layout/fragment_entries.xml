<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    
    <com.cai.workhourstracker.Views.GroupListView
        android:id="@+id/lsComposerEntries"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:divider="?android:attr/dividerVertical"
        android:dividerPadding="2dp"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <FrameLayout
            android:id="@+id/actionbar_cancel"
            style="?android:actionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                style="?android:actionBarTabTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_action_cancel"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingRight="20dp"
                android:text="Clock In Now"
                android:textColor="#ff0000" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/actionbar_done"
            style="?android:actionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                style="?android:actionBarTabTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_action_cancel"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingRight="20dp"
                android:text="Start Clock At..." />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jobs" />

    <TextView
        android:id="@+id/mine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toStartClock"
        android:text="Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showTimePickerDialog"
        android:text="pick time" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showTimePickerWithCancelDialog"
        android:text="pick time" />
    
    

</LinearLayout>